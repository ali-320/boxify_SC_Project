
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public write access to the artwork submissions folder
    match /artwork-submissions/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if true;
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
