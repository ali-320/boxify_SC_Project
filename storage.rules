
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public write access to the artwork submissions folder
    // This allows any user (authenticated or not) to upload artwork.
    // The path is secured by obscurity and is intended for one-time uploads.
    match /artwork-submissions/{allPaths=**} {
      allow read: if request.auth != null; // Allow reading only by authenticated users (e.g., your admin backend)
      allow write: if true; // Allow anyone to write
    }

    // By default, deny all other read/write access to your bucket.
    // This is a critical security measure.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
